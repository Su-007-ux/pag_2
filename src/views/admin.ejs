<!DOCTYPE html>
<html lang="es">
<head>
  <!-- Google tag (gtag.js) para analítica -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-NMP580DL0H"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-NMP580DL0H');
  </script>
  <meta charset="UTF-8">
  <title>Contactos Recibidos</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h1 class="mb-4">Lista de Contactos</h1>
  <input type="text" id="busqueda" placeholder="Buscar por nombre o email" onkeyup="filtrarContactos()" class="form-control mb-4">
  <table class="table table-bordered" id="tablaContactos">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Mensaje</th>
        <th>IP</th>
        <th>Fecha</th>
        <th>País</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach(contact => { %>
        <tr>
          <td class="nombre"><%= contact.name %></td>
          <td class="email"><%= contact.email %></td>
          <td><%= contact.message %></td>
          <td><%= contact.ip %></td>
          <td><%= contact.date %></td>
          <td><%= contact.country %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    function filtrarContactos() {
        const filtro = document.getElementById('busqueda').value.toLowerCase();
        const filas = document.querySelectorAll('#tablaContactos tbody tr');
        filas.forEach(fila => {
            const nombre = fila.querySelector('.nombre').textContent.toLowerCase();
            const email = fila.querySelector('.email').textContent.toLowerCase();
            if (nombre.includes(filtro) || email.includes(filtro)) {
                fila.style.display = '';
            } else {
                fila.style.display = 'none';
            }
        });
    }
  </script>
</body>
</html>