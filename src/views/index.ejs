<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <!-- Google tag (gtag.js) para analítica -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-NMP580DL0H"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-NMP580DL0H');
  </script>
  <!-- Google reCAPTCHA v3 -->
  <script src="https://www.google.com/recaptcha/api.js?render=6LdbjlArAAAAAOVUzHa_IutYVKwcSaAgBJoZllOQ"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= t('title') %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    /* Estilos personalizados para la página principal */
    body {
      background-color: #0d1117;
      color: #f1f1f1;
    }
    .navbar {
      background-color: #0a3d62;
    }
    .hero {
      background: url('../img/fondo.jpg') no-repeat center center;
      background-size: cover;
      padding: 80px 0;
      color: white;
      text-align: center;
    }
    .services i {
      font-size: 3rem;
      color: #54a0ff;
      margin-bottom: 15px;
    }
    .footer {
      background-color: #1e272e;
      padding: 20px;
      color: #ccc;
      text-align: center;
    }
    .btn-custom {
      background-color: #54a0ff;
      border: none;
    }
    .btn-custom:hover {
      background-color: #3c6382;
    }
  </style>
</head>
<body>
  <!-- Navbar principal -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="#"><i class="fas fa-tools"></i> <%= t('title') %></a>
      <form method="get" action="" class="ms-auto me-2">
        <select name="lang" onchange="this.form.submit()" class="form-select form-select-sm d-inline w-auto">
          <option value="es" <%= lang === 'es' ? 'selected' : '' %>>Español</option>
          <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
        </select>
      </form>
      <div class="ms-auto">
        <% if (typeof userId !== 'undefined') { %>
          <a href="/dashboard" class="btn btn-outline-light me-2"><%= t('dashboard') %></a>
          <a href="/logout" class="btn btn-danger"><%= t('logout') %></a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light me-2"><%= t('login') %></a>
          <a href="/register" class="btn btn-success"><%= t('register') %></a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Sección principal (Hero) -->
  <section class="hero">
    <div class="container">
      <h1 class="display-4"><%= t('main_title') %></h1>
      <p class="lead"><%= t('main_subtitle') %></p>
      <a href="#contact" class="btn btn-custom btn-lg mt-3"><%= t('contact_us') %></a>
    </div>
  </section>

  <!-- Sección de servicios -->
  <section class="services py-5">
    <div class="container text-center">
      <h2 class="mb-4"><%= t('our_services') %></h2>
      <div class="row">
        <div class="col-md-4 mb-4">
          <i class="fas fa-laptop-code fa-2x"></i>
          <h5><%= t('software_repair') %></h5>
          <p><%= t('software_repair_desc') %></p>
          <button class="btn btn-primary" onclick="togglePaymentForm('<%= t(&quot;software_repair&quot;) %>')"><%= t("hire") %></button>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-tools fa-2x"></i>
          <h5><%= t('hardware_repair') %></h5>
          <p><%= t('hardware_repair_desc') %></p>
          <button class="btn btn-primary" onclick="togglePaymentForm('<%= t(&quot;hardware_repair&quot;) %>')"><%= t("hire") %></button>
        </div>
        <div class="col-md-4 mb-4">
          <i class="fas fa-headset fa-2x"></i>
          <h5><%= t('tech_support') %></h5>
          <p><%= t('tech_support_desc') %></p>
          <button class="btn btn-primary" onclick="togglePaymentForm('<%= t(&quot;tech_support&quot;) %>')"><%= t("hire") %></button>
        </div>
      </div>
    </div>
  </section>

  <!-- Formulario de pago (oculto por defecto, se muestra al contratar un servicio) -->
  <section id="payment" class="py-5" style="display:none;">
    <div class="container">
      <h3 class="text-center mb-4"><%= t('payment_form') %></h3>
      <form id="paymentForm">
        <div class="mb-3">
          <label for="service" class="form-label"><%= t('service') %></label>
          <input type="text" class="form-control" id="service" name="service" readonly>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label"><%= t('email') %></label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="amount" class="form-label"><%= t('amount') %></label>
          <input type="number" class="form-control" id="amount" name="amount" required>
        </div>
        <div class="mb-3">
          <label for="currency" class="form-label"><%= t('currency') %></label>
          <select class="form-select" id="currency" name="currency" required>
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="BS"><%= t('bs_currency') %></option>
          </select>
        </div>
        <button type="submit" class="btn btn-success w-100"><%= t('pay') %></button>
      </form>
    </div>
  </section>

  <!-- Sección de contacto -->
  <section id="contact" class="py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-4"><%= t('contact_us') %></h2>
      <form id="contact-form">
        <div class="mb-3">
          <label class="form-label"><%= t('name') %></label>
          <input type="text" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label"><%= t('email') %></label>
          <input type="email" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label"><%= t('message') %></label>
          <textarea class="form-control" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-custom w-100"><%= t('send') %></button>
      </form>
    </div>
  </section>

  <!-- Footer con enlaces a redes sociales y acceso a administración -->
  <footer class="footer mt-auto py-3 bg-dark text-white">
    <div class="container text-center">
      <div class="mb-2">
        <a href="https://facebook.com" class="text-white me-3" target="_blank"><i class="fab fa-facebook fa-lg"></i></a>
        <a href="https://instagram.com" class="text-white me-3" target="_blank"><i class="fab fa-instagram fa-lg"></i></a>
        <a href="https://wa.me/1234567890" class="text-white" target="_blank"><i class="fab fa-whatsapp fa-lg"></i></a>
      </div>
      <p>&copy; 2025 Service Tecno. <%= t('all_rights_reserved') %></p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script para enviar eventos a Google Analytics al enviar formularios -->
  <script>
    document.getElementById('contact-form')?.addEventListener('submit', function () {
      gtag('event', 'submit_contact_form', {
        event_category: 'Formulario',
        event_label: 'Formulario de contacto'
      });
    });
  </script>

  <script>
    document.getElementById('paymentForm')?.addEventListener('submit', function () {
      gtag('event', 'submit_payment_form', {
        event_category: 'Formulario',
        event_label: 'Formulario de pago'
      });
    });
  </script>

  <!-- Script para añadir el token de reCAPTCHA al formulario de contacto antes de enviarlo -->
  <script>
    const form = document.getElementById('contact-form');
    form?.addEventListener('submit', function (e) {
      e.preventDefault();

      grecaptcha.ready(function () {
        grecaptcha.execute('6LdbjlArAAAAAOVUzHa_IutYVKwcSaAgBJoZllOQ', { action: 'submit' }).then(function (token) {
          const input = document.createElement('input');
          input.type = 'hidden';
          input.name = 'g-recaptcha-response';
          input.value = token;
          form.appendChild(input);
          form.submit();
        });
      });
    });
  </script>
</body>
</html>